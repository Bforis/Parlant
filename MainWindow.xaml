<Window x:Class="Parlant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parlant"
        Title="Parlant" Height="400" Width="500">
    <Grid>
        <Border Padding="100">
            <StackPanel>
                <Button x:Name="readButton" Content="Lire le Presse-papiers" Click="ReadButton_Click"/>
                <TextBlock>Volume</TextBlock>
                <Slider x:Name="volumeSlider" Minimum="0" Maximum="100" Value="50"/>
                <TextBlock>Vitesse</TextBlock>
                <Slider x:Name="rateSlider" Minimum="-10" Maximum="10" Value="0"/>
                <ComboBox x:Name="languageComboBox" SelectionChanged="LanguageComboBox_SelectionChanged"/>
            </StackPanel>
        </Border>

    </Grid>
    
</Window>
